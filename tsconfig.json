{
  "compilerOptions": {
    "target": "ES2020", // Specify the target ECMAScript version
    "module": "CommonJS", // Use CommonJS for Node.js compatibility
    "moduleResolution": "Node", // Resolve modules in Node.js style
    "strict": true, // Enable strict type checking
    "esModuleInterop": true, // Enable interop with CommonJS modules
    "forceConsistentCasingInFileNames": true, // Ensure consistent file casing
    "outDir": "./dist", // Specify the output directory for compiled files
    "rootDir": "./src" // Specify the root directory of your TypeScript files
  },
  "include": ["src/**/*.ts", "src/generate-keypair.mts"], // Include all TypeScript files in the src directory
  "exclude": ["node_modules"] // Exclude dependencies from compilation
}
